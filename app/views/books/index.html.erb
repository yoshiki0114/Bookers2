
<div class="row">
	<%= render 'books/list', user: @user, book: @book %>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan=3></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to (book.user) do %>
								<%= attachment_image_tag book.user, :profile_image, size: "40x40" , fallback: "no_image.jpg" %>
							<% end %>
						</td>
						<td>
							<%= link_to book_path(book.id) do %>
								<%= book.title %>
							<% end %>
						</td>
						<td><%= book.body %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>